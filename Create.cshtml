@model CoreFirstApproach.Database.Student
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="container">
     <div class="row">
         <div class="col-6 offset-3"></div>
          <div class="card">
              <div class="card-header">
                  <h1 class="text-center text-primary">
                      Fill Details
                   </h1>
                      <div class="card-body">
                      <from method="post" asp-action="Create">
                            <div form-group>
                              
                              <input type="hidden" asp-for="Id" class="from-control" placeholder="Id"/> 
                          </div>
                          <div form-group>
                              <label asp-for="Name"></label>
                              <input type="text" asp-for="Name" class="from-control" placeholder="Name"/>
                          </div>
                          <div form-group>
                              <label asp-for="Email"></label>
                              <input type="text" asp-for="Email" class="from-control" placeholder="Email"/>
                          </div>
                         <div form-group>
                              <label asp-for="Mobile"></label>
                              <input type="text" asp-for="Mobile" class="from-control" placeholder="Mobile">
                          </div>
                     
                         <div form-group>
                              <label asp-for="Company"></label>
                              <input type="text" asp-for="Company" class="from-control" placeholder="Company">
                          </div>
                          <div form-group>
                              <label asp-for="Dept"></label>
                              <input type="text" asp-for="Dept" class="from-control" placeholder="Dept">
                          </div>
                          <div form-group>

                              <input type="submit" value="submit" class="btn btn-outline-success">
                      
                             </div>

                      </from>
                      </div>
                        
                  </div>
              </div>
        </div>
     
</div>